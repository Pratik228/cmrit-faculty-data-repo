<%- include ("../partials/header") %>

  <div class="container-fluid px-5 pt-2">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/FacultyServedAs"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Faculty Served As</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">University/College Name</label>
            <input type="text" name="college_university_name" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Event Name</label>
            <input type="text" name="Eventname" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>


        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label for="date" class="required">Start Date</label>
            <input type="date" name="startDate" class="form-control date__control start__date">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="date" class="required">End Date</label>
            <input type="date" name="endDate" class="form-control end__date">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>

        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label class="required">Served As</label>
            <select name="servedAs" class="custom-select d-block w-100" id="selectBox" onChange="changeFunc();">
              <option value="">Choose...</option>
              <option>BOE</option>
              <option>BOS</option>
              <option>Chairpersons</option>
              <option>Evaluations</option>
              <option>Experts</option>
              <option>External DCS</option>
              <option>Journal Reviewer</option>
              <option>Resource Persons</option>


              <option value="others">Others</option>
              <input name="activityType" placeholder="Mention Here..." class="form-control other-text" type="text"
                style="display: none" id="textboxes">
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </select>
          </div>

          <div class="col-md-6 mb-3">
            <label class="required">COE</label>

            <!-- COE  -->

            <%- include ("../partials/coe") %>

              <div class="invalid-feedback">
                Please select a valid type.
              </div>
          </div>


        </div>

        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>


      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>


    </script>

    </body>

    </html>